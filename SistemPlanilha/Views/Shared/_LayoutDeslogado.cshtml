<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - CREA</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Estilos Gerais */
        body {
            transition: background-color 0.3s, color 0.3s;
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7f6;
        }

        /* --- SELETOR DE TEMA (Copiado do seu layout original) --- */
        .theme-container {
            position: absolute;
            top: 1rem;
            right: 1rem;
        }

        .theme-switch-wrapper {
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .theme-switch-wrapper .bi {
                font-size: 1.3rem;
                transition: color 0.3s ease;
            }

        .theme-switch {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 34px;
        }

            .theme-switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            transition: .4s;
            border-radius: 34px;
        }

            .slider:before {
                position: absolute;
                content: "";
                height: 26px;
                width: 26px;
                left: 4px;
                bottom: 4px;
                background-color: white;
                transition: .4s;
                border-radius: 50%;
            }

        input:not(:checked) + .slider {
            background-color: #0056b3;
        }

        input:checked + .slider {
            background-color: #343a40;
        }

            input:checked + .slider:before {
                transform: translateX(26px);
            }

        /* --- TEMA ESCURO (Copiado do seu layout original) --- */
        body.dark-theme {
            background-color: #121212;
            color: #e0e0e0;
        }

            body.dark-theme .card {
                background-color: #1f1f1f !important;
                color: #e0e0e0;
                border: 1px solid #343a40;
            }

            body.dark-theme .card-title, body.dark-theme h1 {
                color: #ffffff;
            }

            body.dark-theme .form-control {
                background-color: #2c2c2c;
                color: #e0e0e0;
                border-color: #444;
            }

                body.dark-theme .form-control:focus {
                    background-color: #3a3a3a;
                    color: #e0e0e0;
                    border-color: #FDB913;
                    box-shadow: 0 0 0 0.25rem rgba(253, 185, 19, 0.25);
                }

            body.dark-theme .theme-switch-wrapper .bi-moon-fill {
                color: #FDB913;
            }

            body.dark-theme .theme-switch-wrapper .bi-sun-fill {
                color: #555;
            }

        body:not(.dark-theme) .theme-switch-wrapper .bi-sun-fill {
            color: #FDB913;
        }

        body:not(.dark-theme) .theme-switch-wrapper .bi-moon-fill {
            color: #ccc;
        }
    </style>
</head>

<body>
    <div class="theme-container">
        <div class="theme-switch-wrapper">
            <i class="bi bi-moon-fill"></i>
            <label class="theme-switch" for="theme-checkbox">
                <input type="checkbox" id="theme-checkbox" />
                <div class="slider"></div>
            </label>
            <i class="bi bi-sun-fill"></i>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script>
        (function () {
            const themeCheckbox = document.getElementById('theme-checkbox');
            const body = document.body;

            const applyTheme = (theme) => {
                if (theme === 'dark') {
                    body.classList.add('dark-theme');
                    themeCheckbox.checked = true;
                } else {
                    body.classList.remove('dark-theme');
                    themeCheckbox.checked = false;
                }
            };

            themeCheckbox.addEventListener('change', () => {
                const newTheme = themeCheckbox.checked ? 'dark' : 'light';
                localStorage.setItem('theme-preference', newTheme);
                applyTheme(newTheme);
            });

            const savedTheme = localStorage.getItem('theme-preference') || 'light';
            applyTheme(savedTheme);
        })();
    </script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>