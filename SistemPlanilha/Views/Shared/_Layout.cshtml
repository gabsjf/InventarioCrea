@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] -  Iventário CREA</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Estilos Gerais*/
        body {
            transition: background-color 0.3s, color 0.3s;
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7f6;
        }

        /* SIDEBAR */
        #sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100vh;
            background-color: #002855;
            padding: 1rem;
            transition: width 0.3s ease, background-color 0.3s;
            z-index: 1000;
            overflow-x: hidden;
        }

            #sidebar.collapsed {
                width: 70px;
            }

            #sidebar h4 {
                color: #ffffff;
                font-size: 1.5rem;
                white-space: nowrap;
                font-weight: 600;
            }

            #sidebar.collapsed h4, #sidebar.collapsed .nav-link span {
                display: none;
            }

            #sidebar .nav-link {
                display: flex;
                align-items: center;
                gap: 12px;
                padding: 0.75rem 0.5rem;
                text-decoration: none;
                border-radius: 5px;
                margin-bottom: 5px;
                color: #ffffff;
                transition: background-color 0.2s, color 0.2s;
            }

                #sidebar .nav-link:hover {
                    background-color: #FDB913;
                    color: #002855;
                }

                #sidebar .nav-link i {
                    font-size: 1.2rem;
                }

        .btn-toggle {
            background: none;
            border: none;
            font-size: 1.5rem;
            margin-bottom: 1rem;
            padding-left: 0.5rem;
            color: #ffffff;
        }

        /* CONTEÚDO */
        #content {
            margin-left: 250px;
            transition: margin-left 0.3s ease;
        }

        #sidebar.collapsed + #content {
            margin-left: 70px;
        }

        #page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 2rem;
            background-color: #ffffff;
            border-bottom: 1px solid #dee2e6;
            transition: background-color 0.3s, border-color 0.3s;
        }

            #page-header h2 {
                margin: 0;
                font-size: 1.75rem;
                color: #343a40;
            }

        .main-content {
            padding: 2rem;
        }

        /* Tema escuro e demais regras visuais já cobertas no site.css */
    </style>
</head>

<body>
    <div id="sidebar">
        <button class="btn-toggle" onclick="toggleSidebar()">☰</button>
        <a href="/Home/Index" class="text-decoration-none"><h4>Invent CREA-MS</h4></a>
        <nav class="nav flex-column">
            <a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-speedometer2"></i><span>Dashboard</span></a>
            <a class="nav-link" asp-controller="Inventario" asp-action="Index"><i class="bi bi-box-seam"></i><span>Inventário</span></a>
            <a class="nav-link" asp-controller="Manutencao" asp-action="Index"><i class="bi bi-file-text"></i><span>Manutenções</span></a>
            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Administrador"))
            {
                <a class="nav-link" asp-controller="Usuario" asp-action="Index"><i class="bi bi-people-fill"></i><span>Usuários</span></a>
            }
        </nav>
    </div>

    <div id="content">
        <header id="page-header">
            <h2 id="page-title">@ViewData["Title"]</h2>

            <div class="d-flex align-items-center">
                <div class="me-3">
                    <partial name="_LoginPartial" />
                </div>

                <div class="theme-switch-wrapper">
                    <i class="bi bi-moon-fill"></i>
                    <label class="theme-switch" for="theme-checkbox">
                        <input type="checkbox" id="theme-checkbox" />
                        <div class="slider"></div>
                    </label>
                    <i class="bi bi-sun-fill"></i>
                </div>
            </div>
        </header>

        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('collapsed');
        }

        (function () {
            const themeCheckbox = document.getElementById('theme-checkbox');
            const body = document.body;

            const applyTheme = (theme) => {
                if (theme === 'dark') {
                    body.classList.add('dark-theme');
                    themeCheckbox.checked = true;
                } else {
                    body.classList.remove('dark-theme');
                    themeCheckbox.checked = false;
                }
            };

            themeCheckbox.addEventListener('change', () => {
                const newTheme = themeCheckbox.checked ? 'dark' : 'light';
                localStorage.setItem('theme-preference', newTheme);
                applyTheme(newTheme);
            });

            const savedTheme = localStorage.getItem('theme-preference') || 'light';
            applyTheme(savedTheme);
        })();
    </script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
