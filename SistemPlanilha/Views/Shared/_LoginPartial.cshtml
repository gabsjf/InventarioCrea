@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    string primeiroNome = "";
    if (SignInManager.IsSignedIn(User))
    {
        var u = await UserManager.GetUserAsync(User); // <- precisa de await
        var nome = u?.NomeCompleto;

        if (!string.IsNullOrWhiteSpace(nome))
        {
            primeiroNome = nome.Trim()
                               .Split(' ', StringSplitOptions.RemoveEmptyEntries)[0];
        }
        else
        {
            // Fallback: usa o início do e‑mail (antes do @) ou o nome do usuário
            var userName = u?.Email ?? UserManager.GetUserName(User);
            primeiroNome = (userName ?? "").Split('@')[0];
        }
    }
}

<ul class="navbar-nav flex-row align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="navbar-text me-3">
                <i class="bi bi-person-circle"></i> Olá, @primeiroNome!
            </span>
        </li>
        <li class="nav-item">
            <form asp-controller="Conta" asp-action="Sair" method="post">
                <button type="submit" class="btn btn-outline-warning btn-sm">
                    <i class="bi bi-box-arrow-right"></i> Sair
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item ms-2">
            <a class="btn btn-primary btn-sm" asp-controller="Conta" asp-action="Login">Entrar</a>
        </li>
    }
</ul>
