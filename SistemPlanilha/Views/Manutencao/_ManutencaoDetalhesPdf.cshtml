@model SistemPlanilha.ViewModels.Manutencao.RelatorioDetalhesViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Relatório de Manutenção - ID @Model.Id</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            color: #333;
            margin: 40px;
        }

        
        .header {
            display: table;
            width: 100%;
            margin-bottom: 30px;
            border-bottom: 2px solid #002855;
            padding-bottom: 10px;
        }

        .logo {
            display: table-cell;
            width: 120px;
            vertical-align: middle;
        }

            .logo img {
                width: 100px;
            }

        .title {
            display: table-cell;
            vertical-align: middle;
            text-align: right;
            font-size: 20px;
            font-weight: bold;
        }

        

        .info-bloco {
            margin-bottom: 25px;
        }

            .info-bloco h3 {
                background-color: #f0f0f0;
                padding: 8px;
                border-left: 5px solid #007bff;
                font-size: 16px;
                margin-bottom: 10px;
            }

        dl.row {
            display: grid;
            grid-template-columns: 1fr 2fr;
            margin-bottom: 1rem;
            border-bottom: 1px solid #eee;
            padding-bottom: 0.5rem;
        }

        dt {
            font-weight: bold;
            padding-right: 10px;
        }

        dd {
            margin: 0;
        }

        .footer {
            text-align: center;
            font-size: 10px;
            position: fixed;
            bottom: 20px;
            width: 100%;
            left: 0;
        }
    </style>
</head>
<body>

    <div class="header">
        <div class="logo">
            <img src="/images/LogoCrea.png" alt="Logo" />
        </div>
        <div class="title">
            Relatório Técnico de Manutenção
        </div>
    </div>

    <div class="info-bloco">
        <h3>Informações Gerais</h3>
        <dl class="row"><dt>Nº da Manutenção:</dt><dd>@Model.Id</dd></dl>
        <dl class="row"><dt>Item do Inventário:</dt><dd>@Model.InventarioPcName (ID: @Model.InventarioId)</dd></dl>
        <dl class="row"><dt>Data de Abertura:</dt><dd>@Model.DataCriacao</dd></dl>
        <dl class="row"><dt>Status Atual:</dt><dd>@Model.StatusNome</dd></dl>
    </div>

    <div class="info-bloco">
        <h3>Detalhes da Ocorrência</h3>
        <dl> @Model.Descricao</dl>
        <dl> @Model.AcoesRealizadas</dl>

    </div>

    <div class="footer">
        Relatório gerado em @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
    </div>

</body>
</html>