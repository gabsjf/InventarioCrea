@model IEnumerable<SistemPlanilha.ViewModels.Manutencao.RelatorioParaListagemViewModel>

@{
    ViewData["Title"] = "Manutenções";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    .text-truncate-ellipsis {
        max-width: 180px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    th, td {
        vertical-align: middle;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold"><i class="bi bi-clipboard-data"></i> Manutenções</h2>
        <a asp-action="ExportarPdf" asp-route-inventarioId="@Context.Request.Query["inventarioId"]" class="btn btn-danger me-2">
            <i class="bi bi-file-earmark-pdf"></i> Exportar para PDF
        </a>
        <a asp-controller="Manutencao" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Criar novo
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>Inventário</th>
                    <th>Descrição</th>
                    <th>Data</th>
                    <th>Responsável</th>
                    <th>Tipo</th>
                    <th>Ações Realizadas</th>
                    <th>Tempo</th>
                    <th>Status</th>
                    <th>Observações</th>
                    <th>Próxima</th>
                    <th>Técnico</th>
                    <th>Peças</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.InventarioId</td>
                        <td>
                            <span class="text-truncate-ellipsis d-inline-block" title="@item.Descricao">
                                @item.Descricao
                            </span>
                        </td>
                        <td>@item.DataCriacao</td>
                        <td>@item.Responsavel</td>
                        <td>@item.TipoManutencao</td>
                        <td>
                            <span class="text-truncate-ellipsis d-inline-block" title="@item.AcoesRealizadas">
                                @item.AcoesRealizadas
                            </span>
                        </td>
                        <td>@item.TempoEstimadoResolucao</td>
                        <td>@item.StatusNome</td>
                        <td>
                            <span class="text-truncate-ellipsis d-inline-block" title="@item.ObservacoesAdicionais">
                                @item.ObservacoesAdicionais
                            </span>
                        </td>
                        <td>@item.ProximaManutencao</td>
                        <td>@item.ResponsavelTecnico</td>
                        <td>
                            <span class="text-truncate-ellipsis d-inline-block" title="@item.PecasSubstituidas">
                                @item.PecasSubstituidas
                            </span>
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group" aria-label="Ações do Item">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Editar">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-controller="Manutencao" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Detalhes">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                                <a asp-controller="Manutencao" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Deletar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>