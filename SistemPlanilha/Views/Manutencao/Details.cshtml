@model SistemPlanilha.ViewModels.Manutencao.RelatorioDetalhesViewModel

@{
    ViewData["Title"] = "Detalhes da Manutenção";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Detalhes da Manutenção</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                Editar
            </a>
            <a asp-action="Pdf" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                Exportar PDF
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                Voltar
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-4">Item do Inventário: <strong>@Model.InventarioPcName</strong> (ID: @Model.InventarioId)</h5>

            <dl class="row">
                <dt class="col-sm-4">Descrição</dt>
                <dd class="col-sm-8">@Model.Descricao</dd>

                <dt class="col-sm-4">Data de Criação</dt>
                <dd class="col-sm-8">@Model.DataCriacao</dd>

                <dt class="col-sm-4">Responsável pelo Item</dt>
                <dd class="col-sm-8">@Model.Responsavel</dd>

                <dt class="col-sm-4">Técnico Responsável</dt>
                <dd class="col-sm-8">@Model.ResponsavelTecnico</dd>

                <dt class="col-sm-4">Tipo de Manutenção</dt>
                <dd class="col-sm-8">@Model.TipoManutencao</dd>

                <dt class="col-sm-4">Status da Manutenção</dt>
                <dd class="col-sm-8">@Model.StatusNome</dd>

                <dt class="col-sm-4">Ações Realizadas</dt>
                <dd class="col-sm-8">@Model.AcoesRealizadas</dd>

                <dt class="col-sm-4">Tempo Estimado</dt>
                <dd class="col-sm-8">@Model.TempoEstimadoResolucao</dd>

                <dt class="col-sm-4">Peças Substituídas</dt>
                <dd class="col-sm-8">@Model.PecasSubstituidas</dd>

                <dt class="col-sm-4">Próxima Manutenção</dt>
                <dd class="col-sm-8">@Model.ProximaManutencao</dd>

                <dt class="col-sm-4">Observações Adicionais</dt>
                <dd class="col-sm-8">@Model.ObservacoesAdicionais</dd>
            </dl>
        </div>
    </div>
</div>