@model IEnumerable<UsuarioListagemViewModel>

<h1>Gerenciamento de Usuários</h1>
<a asp-action="Criar" class="btn btn-success mb-3">Criar Novo Usuário</a>

<table class="table">
    <thead>
        <tr><th>Nome</th><th>Email</th><th>Função</th><th>Ações</th></tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
          <tr>
            <td>@user.NomeCompleto</td>
                <td>@user.Email</td>
                <td><span class="badge bg-primary">@user.Funcao</span></td>
                <td>
                    <a asp-action="Editar" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Deletar" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Deletar</a>
                    <a asp-action="Detalhes" asp-route-id="@user.Id" class="btn btn-sm btn-info">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>