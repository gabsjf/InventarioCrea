@model SistemPlanilha.ViewModels.Conta.MudarSenhaPrimeiroAcessoViewModel
@{
    ViewData["Title"] = "Alterar Senha";
    Layout = "_LayoutDeslogado"; // Usando um layout simples sem menus
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mt-5">
            <div class="card-body">
                <h1 class="card-title text-center">Defina sua Nova Senha</h1>
                <p class="text-center text-muted">Por segurança, você precisa criar uma senha pessoal no seu primeiro acesso.</p>

                <form asp-controller="Conta" asp-action="ChangePasswordOnFirstLogin" method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="NewPassword" class="form-control" placeholder="Nova Senha" />
                        <label asp-for="NewPassword"></label>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirmar Nova Senha" />
                        <label asp-for="ConfirmPassword"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Salvar Nova Senha</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>