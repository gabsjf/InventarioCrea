@model SistemPlanilha.ViewModels.Conta.ChangePasswordViewModel
@{
    ViewData["Title"] = "Alterar Senha";
    Layout = "_LayoutDeslogado"; // Ou o seu layout principal se preferir
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mt-5">
            <div class="card-body">
                <h1 class="card-title text-center">Alterar Senha</h1>

                @if (TempData["StatusMessage"] != null)
                {
                    <div class="alert alert-warning text-center" role="alert">
                        @TempData["StatusMessage"]
                    </div>
                }

                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="OldPassword" class="form-control" autocomplete="current-password" placeholder="Senha Atual" />
                        <label asp-for="OldPassword"></label>
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="NewPassword" class="form-control" autocomplete="new-password" placeholder="Nova Senha" />
                        <label asp-for="NewPassword"></label>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                        <div class="form-text">
                            A senha deve ter no mínimo 8 caracteres, incluindo maiúscula, minúscula, número e caractere especial.
                        </div>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirmar Nova Senha" />
                        <label asp-for="ConfirmPassword"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Alterar Senha</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>