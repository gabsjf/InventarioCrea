@model ExibirInventarioEditarFormViewModel
@{
    var triggerId = $"hist-trigger-{Model.Command.Id}";
    var contentId = $"historico-popover-content-{Model.Command.Id}";
}

<form asp-controller="Inventario"
      asp-action="Editar"
      asp-route-id="@Model.Command.Id"
      method="post"
      autocomplete="off">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Command.Id" />

    <div class="modal-header">
        <h5 class="modal-title">Editar Item: @Model.Command.PcName</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>

    <div class="modal-body">
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Command.PcName" class="form-label"></label>
                <input asp-for="Command.PcName" class="form-control" />
                <span asp-validation-for="Command.PcName" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Command.Usuario" class="form-label"></label>
                <input asp-for="Command.Usuario" class="form-control" />
                <span asp-validation-for="Command.Usuario" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Command.Serial" class="form-label"></label>
                <input asp-for="Command.Serial" class="form-control" />
            </div>
            <div class="col-md-4">
                <label asp-for="Command.Patrimonio" class="form-label"></label>
                <input asp-for="Command.Patrimonio" class="form-control" />
            </div>
            <div class="col-md-4">
                <label asp-for="Command.Modelo" class="form-label"></label>
                <input asp-for="Command.Modelo" class="form-control" />
            </div>

            <div class="col-md-6">
                <div>
                    <label asp-for="Command.SetorId" class="form-label d-inline">Setor</label>
                    <span id="@triggerId"
                          class="ms-2"
                          style="cursor: pointer;"
                          data-bs-toggle="popover"
                          data-bs-placement="right"
                          title="Histórico de movimentações">
                        <i class="bi bi-info-circle text-primary"></i>
                    </span>
                </div>
                <select asp-for="Command.SetorId" class="form-select" asp-items="Model.Setores">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="Command.SetorId" class="text-danger"></span>

                @{
                    string historicoHtml = "Nenhum histórico de movimentação.";
                    if (Model.HistoricoDeSetores != null && Model.HistoricoDeSetores.Any())
                    {
                        var sb = new System.Text.StringBuilder();
                        sb.Append("<table class='table table-sm table-bordered m-0'>");
                        sb.Append("<thead><tr><th>Data</th><th>De</th><th>Para</th><th>Por</th></tr></thead>");
                        sb.Append("<tbody>");
                        foreach (var item in Model.HistoricoDeSetores)
                        {
                            var de = System.Net.WebUtility.HtmlEncode(item.SetorOrigem?.Nome ?? "N/A");
                            var para = System.Net.WebUtility.HtmlEncode(item.SetorDestino?.Nome ?? "N/A");
                            var por = System.Net.WebUtility.HtmlEncode(item.ResponsavelAlteracao);
                            sb.Append($"<tr><td>{item.DataAlteracao:dd/MM/yy}</td><td>{de}</td><td>{para}</td><td>{por}</td></tr>");
                        }
                        sb.Append("</tbody></table>");
                        historicoHtml = sb.ToString();
                    }
                }
                <div id="@contentId" style="display: none;">
                    @Html.Raw(historicoHtml)
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="Command.TipoId" class="form-label"></label>
                <select asp-for="Command.TipoId" class="form-select" asp-items="Model.Tipos">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="Command.TipoId" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Command.SituacaoId" class="form-label"></label>
                <select asp-for="Command.SituacaoId" class="form-select" asp-items="Model.Situacoes">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="Command.SituacaoId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Command.Responsavel" class="form-label"></label>
                <input asp-for="Command.Responsavel" class="form-control" />
                <span asp-validation-for="Command.Responsavel" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Command.WinVerId" class="form-label"></label>
                <select asp-for="Command.WinVerId" class="form-select" asp-items="Model.WinVers">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="Command.WinVerId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Command.OfficeId" class="form-label"></label>
                <select asp-for="Command.OfficeId" class="form-select" asp-items="Model.Offices">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="Command.OfficeId" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Command.Processador" class="form-label"></label>
                <input asp-for="Command.Processador" class="form-control" />
                <span asp-validation-for="Command.Processador" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Command.Ssd" class="form-label"></label>
                <input asp-for="Command.Ssd" class="form-control" />
                <span asp-validation-for="Command.Ssd" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Command.Obs" class="form-label"></label>
                <textarea asp-for="Command.Obs" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Command.Obs" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Command.LicencaSO" />
                    <label class="form-check-label" asp-for="Command.LicencaSO"></label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Command.LicencaOffice" />
                    <label class="form-check-label" asp-for="Command.LicencaOffice"></label>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    </div>
</form>

<style>
    .popover {
        max-width: 600px;
        width: auto;
    }

        .popover .table {
            margin-bottom: 0;
        }
</style>

<script>
    (function () {
        const triggerId = '@triggerId';
        const contentId = '@contentId';

        function initPopover() {
            if (!window.bootstrap || !window.bootstrap.Popover) return;
            const trigger = document.getElementById(triggerId);
            const contentDiv = document.getElementById(contentId);
            if (!trigger || !contentDiv) return;

            const old = bootstrap.Popover.getInstance(trigger);
            if (old) old.dispose();

            new bootstrap.Popover(trigger, {
                content: contentDiv.innerHTML,
                html: true,             
                allowHtml: true,
                sanitize: false,        
                trigger: 'hover focus',
                container: 'body',
                placement: 'right'
            });
        }

        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initPopover);
        } else {
            initPopover();
        }

        document.addEventListener('shown.bs.modal', function (e) {
            const trigger = document.getElementById(triggerId);
            if (!trigger) return;
            if (e.target && e.target.contains(trigger)) {
                initPopover();
            }
        });
    })();
</script>
