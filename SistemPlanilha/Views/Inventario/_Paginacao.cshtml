@model SistemPlanilha.ViewModels.InventarioIndexViewModel

<nav aria-label="Paginação de itens">
    <ul class="pagination justify-content-center">
        <!-- Botão Anterior -->
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a href="#" class="page-link" data-page="@(Model.CurrentPage - 1)" aria-label="Anterior">
                <span aria-hidden="true">&laquo;</span>
                <span class="d-none d-sm-inline"> Anterior</span>
            </a>
        </li>

        @* Cálculo de quais páginas mostrar *@
        @{
            var pagesToShow = 5;
            var half = pagesToShow / 2;
            var start = Math.Max(1, Model.CurrentPage - half);
            var end = Math.Min(Model.TotalPages, start + pagesToShow - 1);
            if (end - start + 1 < pagesToShow)
            {
                start = Math.Max(1, end - pagesToShow + 1);
            }
        }
        @for (int i = start; i <= end; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")" aria-current="@(i == Model.CurrentPage ? "page" : null)">
                <a href="#" class="page-link" data-page="@i">@i</a>
            </li>
        }

        <!-- Botão Próximo -->
        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
            <a href="#" class="page-link" data-page="@(Model.CurrentPage + 1)" aria-label="Próximo">
                <span class="d-none d-sm-inline">Próximo </span>
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>
