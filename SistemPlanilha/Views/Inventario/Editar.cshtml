@model ExibirInventarioEditarFormViewModel

@{
    ViewData["Title"] = "Editar item";
}

<h1 class="display-4">Editar item</h1>
<hr />

<form asp-controller="Inventario" asp-action="Editar" method="post">
   
    <input type="hidden" asp-for="Command.Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row g-3">
        <div class="col-md-6">
            
            <label asp-for="Command.PcName" class="form-label"></label>
            <input asp-for="Command.PcName" class="form-control" />
            <span asp-validation-for="Command.PcName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Command.Serial" class="form-label"></label>
            <input asp-for="Command.Serial" class="form-control" />
            <span asp-validation-for="Command.Serial" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Command.Patrimonio" class="form-label"></label>
            <input asp-for="Command.Patrimonio" class="form-control" />
            <span asp-validation-for="Command.Patrimonio" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Command.SetorId" class="form-label"></label>
           
            <select asp-for="Command.SetorId" class="form-select" asp-items="Model.Setores">
                <option value="">Selecione o setor</option>
            </select>
            <span asp-validation-for="Command.SetorId" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Command.Usuario" class="form-label"></label>
            <input asp-for="Command.Usuario" class="form-control" />
            <span asp-validation-for="Command.Usuario" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Command.Responsavel" class="form-label"></label>
            <input asp-for="Command.Responsavel" class="form-control" />
            <span asp-validation-for="Command.Responsavel" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Command.TipoId" class="form-label"></label>
            <select asp-for="Command.TipoId" class="form-select" asp-items="Model.Tipos">
                <option value="">Selecione o tipo</option>
            </select>
            <span asp-validation-for="Command.TipoId" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Command.Modelo" class="form-label"></label>
            <input asp-for="Command.Modelo" class="form-control" />
            <span asp-validation-for="Command.Modelo" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Command.SituacaoId" class="form-label"></label>
            <select asp-for="Command.SituacaoId" class="form-select" asp-items="Model.Situacoes">
                <option value="">Selecione a situação</option>
            </select>
            <span asp-validation-for="Command.SituacaoId" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Command.Processador" class="form-label"></label>
            <input asp-for="Command.Processador" class="form-control" />
            <span asp-validation-for="Command.Processador" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Command.Ssd" class="form-label">SSD</label>
            <input asp-for="Command.Ssd" class="form-control" />
            <span asp-validation-for="Command.Ssd" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Command.WinVerId" class="form-label"></label>
            <select asp-for="Command.WinVerId" class="form-select" asp-items="Model.WinVers">
                <option value="">Selecione a versão</option>
            </select>
            <span asp-validation-for="Command.WinVerId" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Command.OfficeId" class="form-label"></label>
            <select asp-for="Command.OfficeId" class="form-select" asp-items="Model.Offices">
                <option value="">Selecione a versão</option>
            </select>
            <span asp-validation-for="Command.OfficeId" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label asp-for="Command.Obs" class="form-label"></label>
            <textarea asp-for="Command.Obs" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Command.Obs" class="text-danger"></span>
        </div>
        <div class="col-md-6 align-self-center">
            <div class="form-check mt-3">
                <input class="form-check-input" asp-for="Command.LicencaSO" />
                <label class="form-check-label" asp-for="Command.LicencaSO"></label>
            </div>
        </div>
        <div class="col-md-6 align-self-center">
            <div class="form-check mt-3">
                <input class="form-check-input" asp-for="Command.LicencaOffice" />
                <label class="form-check-label" asp-for="Command.LicencaOffice"></label>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
        <a class="btn btn-secondary" asp-controller="Inventario" asp-action="Index">Voltar</a>
    </div>
</form>